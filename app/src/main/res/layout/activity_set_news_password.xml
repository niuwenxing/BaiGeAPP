<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.account.SetNewsPasswordActivity">

    <include layout="@layout/layout_common_throw"/>

    <ImageView
        android:id="@+id/iv_ForgetClose_btn"
        android:layout_width="21dp"
        android:layout_height="0dp"
        android:layout_marginStart="46dp"
        android:layout_marginLeft="46dp"
        android:src="@mipmap/chahao"
        app:layout_constraintBottom_toBottomOf="@+id/tv_Helpbtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_Helpbtn" />

    <TextView
        android:id="@+id/tv_Helpbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:layout_marginRight="16dp"
        android:text="帮助"
        android:padding="5dp"
        android:textColor="#9B9FA7FF"
        android:textSize="15dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="87dp"
        android:layout_marginLeft="87dp"
        android:layout_marginTop="43dp"
        android:paddingLeft="30dp"
        android:text="设置新密码"
        android:textColor="@color/color000"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/iv_ForgetClose_btn"
        app:layout_constraintTop_toBottomOf="@+id/iv_ForgetClose_btn" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        android:layout_marginRight="158dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="14dp"
            android:background="@color/colorF2F2F3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_PasswordstrOne" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/color040E22"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/et_PasswordstrOne"
            style="@style/editTextStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:digits="0123456789"
            android:hint="请输入新密码"
            android:paddingLeft="30dp"
            android:inputType="textPassword"
            android:maxLength="11"
            android:phoneNumber="true"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView3"
            app:layout_constraintEnd_toStartOf="@+id/img_passWordBtn"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toTopOf="@+id/textView3" />

        <ImageView
            android:id="@+id/img_passWordBtn"
            android:layout_width="40dp"
            android:layout_height="0dp"
            android:padding="10dp"
            android:src="@drawable/green_password_selector"
            app:layout_constraintBottom_toBottomOf="@+id/et_PasswordstrOne"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/et_PasswordstrOne" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayouta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
        app:layout_constraintStart_toStartOf="@+id/constraintLayout"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="14dp"
            android:background="@color/colorF2F2F3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_PasswordstrTow" />

        <TextView
            android:id="@+id/textView33"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/color040E22"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/et_PasswordstrTow"
            style="@style/editTextStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:digits="0123456789"
            android:paddingLeft="30dp"
            android:hint="请再次输入新密码"
            android:inputType="textPassword"
            android:maxLength="11"
            android:phoneNumber="true"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView33"
            app:layout_constraintEnd_toStartOf="@+id/img_passWordBtntow"
            app:layout_constraintStart_toEndOf="@+id/textView33"
            app:layout_constraintTop_toTopOf="@+id/textView33" />

        <ImageView
            android:id="@+id/img_passWordBtntow"
            android:layout_width="40dp"
            android:layout_height="0dp"
            android:padding="10dp"
            android:src="@drawable/green_password_selector"
            app:layout_constraintBottom_toBottomOf="@+id/et_PasswordstrTow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/et_PasswordstrTow" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <Button
        android:id="@+id/bt_setPswdbtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:background="@drawable/btn_login_selector"
        android:padding="16dp"
        android:text="@string/changePad"
        android:textColor="@color/colorFFF"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/constraintLayouta"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/constraintLayouta"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayouta" />


</androidx.constraintlayout.widget.ConstraintLayout>