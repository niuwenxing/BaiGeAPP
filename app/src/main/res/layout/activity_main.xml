<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.homepage.MainActivity">

    <FrameLayout
        android:id="@+id/vp_main"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="@+id/rg_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rg_main"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:layout_marginTop="200dp"
        android:id="@+id/rg_main"
        android:layout_width="88dp"
        android:background="#F7F7F7"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/rb_Workbench_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:background="@null"
            android:button="@null"
            android:drawableTop="@drawable/rb_workbench"
            android:gravity="center"
            android:text="工作台"
            android:textColor="@drawable/homedowncolor"
            android:textSize="10dp" />


        <RadioButton
            android:id="@+id/rb_Openingorder_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:button="@null"
            android:drawableTop="@drawable/rb_openingorder"
            android:gravity="center"
            android:text="开处方"
            android:textColor="@drawable/homedowncolor"
            android:textSize="10dp" />

        <RadioButton
            android:id="@+id/rb_oneself_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:button="@null"
            android:drawableTop="@drawable/rb_oneself"
            android:gravity="center"
            android:text="我的"
            android:textColor="@drawable/homedowncolor"
            android:textSize="10dp" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>